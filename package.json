{
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:server": "cross-env NODE_ENV=development nodemon server.js",
    "dev:client": "cross-env NODE_ENV=development vite --port 5173",
    "start": "cross-env NODE_ENV=production node server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production vite build --ssrManifest",
    "build:server": "cross-env NODE_ENV=production vite build --outDir dist/server --ssr /index.js",
    "preview": "cross-env NODE_ENV=production npm run build && npm start",
    "lint": "eslint . --ext .js,.jsx --fix"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "history": "^5.3.0",
    "minipass": "^7.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^7.7.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.2"
  }
}
